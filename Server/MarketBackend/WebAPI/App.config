<?xml version="1.0" encoding="utf-8" ?>

<!--Using group is optional (can be handy if there is different configs groups inside database maybe)-->
<!--For typed params (not string) + statically named params + presets, see "ProductSettings" and "DellSettings" 
	in this example https://www.c-sharpcorner.com/article/four-ways-to-read-configuration-setting-in-c-sharp/-->

<configuration>
	<configSections>
		<sectionGroup name="Database">
			<section name="DBServerSettings" type="System.Configuration.NameValueSectionHandler"/>
		</sectionGroup>
	</configSections>

	<Database>
		<DBServerSettings>
			<add key="databaseName"		value="MarketDatabase" />
			<add key="instanceName"		value="SQLEXPRESS" />
			<add key="ip"				value="192.168.56.101" />
			<add key="port"				value="50488" />
			<add key="databaseUsername"	value="amitZivan" />
			<add key="databasePassword"	value="passMarket" />
		</DBServerSettings>
	</Database>
	
	
</configuration>